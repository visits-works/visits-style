{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "lib",
    "module": "es2015",
    "target": "esnext",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types", "src/types"],
  },
  "include": ["src/**/*"],
  "exclude": [
    "./gulpfile.js",
    "./jest.setup.js",
    "./doczrc.js",
    "./node_modules/**",
    "./doc_theme",
    "build",
    "lib",
    "jest",
  ]
}
