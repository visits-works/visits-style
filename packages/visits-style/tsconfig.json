{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "downlevelIteration": true,
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "preserve"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/**.story.tsx",
    "**/**.test.tsx",
    "**/setupTest.ts"
  ]
}
