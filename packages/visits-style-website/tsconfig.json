{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/index"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["../visits-style/src/components/*"],
      "@utils/*": ["../visits-style/src/utils/*"],
      "@theme/*": ["../visits-style/src/theme/*"],
      "@styles/*": ["../visits-style/src/styles/*"],
    }
  },
  "exclude": [
    "./gulpfile.js",
    "./jest.setup.js",
    "./doczrc.js",
    "./node_modules/**",
    "./doc_theme",
    "build",
    "lib",
    "jest",
  ]
}
