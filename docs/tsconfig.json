{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "visits-style": ["../packages/core/src"]
    }
  },
  "exclude": [
    "./node_modules/**",
    "build",
    "lib",
    "jest",
  ]
}
