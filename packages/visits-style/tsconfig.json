{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "./jest.setup.js",
    "./node_modules/**",
    "**/__test__/**",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.story.tsx",
    "build",
    "lib",
    "jest",
  ]
}
