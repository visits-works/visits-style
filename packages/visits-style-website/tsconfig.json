{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["../visits-style/components"],
      "@theme": ["../visits-style/theme"],
      "@styles": ["../visits-style/styles"],
    },
  },
  "exclude": [
    "./gulpfile.js",
    "./jest.setup.js",
    "./doczrc.js",
    "./node_modules/**",
    "./doc_theme",
    "build",
    "lib",
    "jest",
  ]
}
